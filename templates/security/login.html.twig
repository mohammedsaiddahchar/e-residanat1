{% extends 'base.html.twig' %}

{% block title %}{{"security.login"|trans}}
{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
            
    <link href="{{ asset('uploads/css/icons.css') }}" rel="stylesheet" >
    <link href="{{ asset('uploads/bootstrap-icons/font/bootstrap-icons.css') }}" rel="stylesheet" >        
        
     <link rel="icon" href="{{asset('build/images/favicon-32x32.png')}}" type="image/png" />
    <!-- Bootstrap CSS -->
    {% set locale = app.request.locale %}
    {% if locale == 'ar-AR' %} 
        {{ encore_entry_link_tags('bootstraprtl') }}
        {{ encore_entry_link_tags('stylertl') }}
        
    {% endif %}

{% endblock %}
{% block body %}
	
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
        <form method="post" action ="{{ path('app_login') }}">
            <!--start wrapper-->
            <div class="wrapper">
                
                <!--start content-->
                <main class="authentication-content">
                    <div class="container-fluid">
                    <div class="authentication-card">
                        <div class="card shadow rounded-0 overflow-hidden">
                        <div class="row g-0">
                            <div class="col-lg-6 bg-login d-flex align-items-center justify-content-center">
                            <img src="{{asset('build/images/error/login-img.jpg')}}" class="img-fluid" alt="">
                            </div>
                            <div class="col-lg-6">
                            <div class="card-body p-4 p-sm-5">
                                <h5 class="card-title">{{'security.sing-in'|trans}}</h5>
                                <div class="input-group mb-3">
                                    <div style="width:100%;text-align:center">
                                        {% include 'changelangue/changeLangue.html.twig' %}
                                        
                                    </div>
                                </div>
                                <form class="form-body">
                                <div class="d-grid">
                                    
                                </div>
                                <div class="login-separater text-center mb-4"> 
                                    <hr>
                                </div>
                                    <div class="row g-3">
                                    <div class="col-12">
                                        <label for="inputEmailAddress" class="form-label">{{'security.email'|trans}}</label>
                                        <div class="ms-auto position-relative">
                                        <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-envelope-fill"></i></div>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control radius-30 ps-5" placeholder="{{'security.email'|trans}}" required autofocus>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <label for="inputChoosePassword" class="form-label">{{'security.password'|trans}}</label>
                                        <div class="ms-auto position-relative">
                                        <div class="position-absolute top-50 translate-middle-y search-icon px-3"><i class="bi bi-lock-fill"></i></div>
                                        <input type="password" name="password" id="inputPassword" class="form-control radius-30 ps-5" placeholder="{{'security.password'|trans}}" required>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked="">
                                        <label class="form-check-label" for="form2Example3">
										{{'security.remember-me'|trans}}
									</label>
                                        </div>
                                    </div>
                                    <div class="col-6 text-end">	<a href="{{path('app_forgot_password_request')}}">{{'security.forgetten-password'|trans}}</a>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <div class="col-12">
                                        <div class="d-grid">
                                        <button type="submit" class="btn btn-primary radius-30">{{'security.login'|trans}}</button>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <p class="mb-0">{{'security.dont-have-account'|trans}} <a href="{{path('app_register')}}">{{'security.register'|trans}}</a></p>
                                    </div>
                                    </div>
                                </form>
                            </div>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
                </main>
                    
                <!--end page main-->

            </div>
            <!--end wrapper-->
        </form>
	{% endblock %}
    {% block javascripts %}
            {{ encore_entry_script_tags('app') }} 

    {% endblock %}